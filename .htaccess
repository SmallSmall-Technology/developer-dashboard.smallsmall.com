<IfModule mod_rewrite.c>
    Options +FollowSymLinks
    RewriteEngine On

    # Set the base path for the application
    RewriteBase /developer-dashboard.smallsmall.com/

    # Redirect all requests to the public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*?)$ public/$1 [L]

    # Handle requests for the developer dashboard
    RewriteRule ^(developer-dashboard.smallsmall.com/)?$ public/index.php [L]

    # Redirect non-existent files or directories to Laravel's index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
